<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>de.tudarmstadt.ukp.dkpro.core-asl</artifactId>
		<groupId>de.tudarmstadt.ukp.dkpro.core</groupId>
		<version>1.3.0-SNAPSHOT</version>
	</parent>
	<groupId>de.tudarmstadt.ukp.dkpro.core</groupId>
	<artifactId>de.tudarmstadt.ukp.dkpro.core-gpl</artifactId>
	<name>DKPro Core GPL</name>
	<description>DKPro Core is a collection of software components for natural language processing (NLP) based on the Apache UIMA framework.</description> <!-- The description tag must be present for antrun to work!! -->
	<url>http://code.google.com/p/dkpro-core-gpl/</url>
	<version>1.3.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<repositories>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>ukp-oss</id>
			<url>http://zoidberg.tk.informatik.tu-darmstadt.de/artifactory/repo/</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>ukp-oss</id>
			<url>dav:https://zoidberg.tk.informatik.tu-darmstadt.de/artifactory/public-ukp-releases-local</url>
		</repository>
	</distributionManagement>
	<issueManagement>
		<system>Google Code</system>
		<url>http://code.google.com/p/dkpro-core-gpl/issues/list</url>
	</issueManagement>
	<scm>
		<connection>http://dkpro-core-gpl.googlecode.com/svn/de.tudarmstadt.ukp.dkpro.core-gpl/trunk/</connection>
		<developerConnection>scm:svn:https://dkpro-core-gpl.googlecode.com/svn/de.tudarmstadt.ukp.dkpro.core-gpl/trunk/</developerConnection>
		<url>http://code.google.com/p/dkpro-core-gpl/source/browse/de.tudarmstadt.ukp.dkpro.core-gpl/trunk</url>
	</scm>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>de.tudarmstadt.ukp.dkpro.core</groupId>
				<artifactId>de.tudarmstadt.ukp.dkpro.core.stanfordnlp-gpl</artifactId>
				<version>1.3.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>de.tudarmstadt.ukp.dkpro.core</groupId>
				<artifactId>de.tudarmstadt.ukp.dkpro.core.api.frequency-gpl</artifactId>
				<version>1.3.0-SNAPSHOT</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<modules>
		<module>de.tudarmstadt.ukp.dkpro.core.stanfordnlp</module>
		<module>de.tudarmstadt.ukp.dkpro.core.distribution</module>
		<module>de.tudarmstadt.ukp.dkpro.core.frequency-gpl</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<notimestamp>true</notimestamp>
					<!-- Exclude UIMA types -->
					<excludePackageNames>*.type</excludePackageNames>
					<groups>
						<group>
							<title>APIs</title>
							<packages>de.tudarmstadt.ukp.dkpro.core.api*</packages>
						</group>
						<group>
							<title>Analysis Components</title>
							<packages>de.tudarmstadt.ukp.dkpro.core.stanfordnlp*</packages>
						</group>
						<group>
							<title>I/O Components</title>
							<packages>de.tudarmstadt.ukp.dkpro.core.io*</packages>
						</group>
					</groups>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>rat-check</id>
			<activation>
				<file>
					<exists>src/main/java</exists>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.rat</groupId>
						<artifactId>apache-rat-plugin</artifactId>
						<executions>
							<execution>
								<id>default</id>
								<configuration>
									<excludes>
										<!-- 
										   Exclude all - We inherit from the ASL parent POM but we have
										   only GPL code in this part.
										-->
										<exclude>**/*</exclude> 
									</excludes>
								</configuration>
							</execution>
						</executions>						
					</plugin>
				</plugins>
			</build>
		</profile>		
		<profile>
			<id>build-apidocs</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-javadoc-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>aggregate</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>