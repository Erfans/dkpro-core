<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<name>WebArgumentMetadata</name>
	<description>Type system for RST discourse annotations</description>
	<version>1.0</version>
	<vendor>(c) 2016 UKP</vendor>
	<types>
		<typeDescription>
			<name>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.RSTTreeNode</name>
			<description>RST Tree node</description>
			<supertypeName>uima.tcas.Annotation</supertypeName>
			<features>
				<featureDescription>
					<name>unitType</name>
					<description>N or S (nucleus/satellite)</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
			</features>
		</typeDescription>

		<typeDescription>
			<name>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.DiscourseRelation</name>
			<supertypeName>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.RSTTreeNode
			</supertypeName>
			<features>
				<featureDescription>
					<name>relationType</name>
					<description>Relation type (elaboration, contrast, etc.)</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>arg1</name>
					<rangeTypeName>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.RSTTreeNode
					</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>arg2</name>
					<rangeTypeName>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.RSTTreeNode
					</rangeTypeName>
				</featureDescription>
			</features>
		</typeDescription>

		<typeDescription>
			<name>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.EDU</name>
			<supertypeName>de.tudarmstadt.ukp.dkpro.core.discourse.type.rst.RSTTreeNode
			</supertypeName>
			<features>
				<featureDescription>
					<name>originalText</name>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
			</features>
		</typeDescription>
	</types>
</typeSystemDescription>
